<div class="row">
  <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
    <div class="panel panel-default panel-auth">
      <div class="panel-heading">
        <h1><%= t 'devise.sign_in' %></h1>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>

          <%= render "devise/shared/omnauth" %>

          <%= devise_error_messages! %>

          <div class="form-group">
            <div class="col-sm-4">
              <%= f.label :email %>:
            </div>
            <div class="col-sm-6">
              <%= f.email_field :email, autofocus: true, placeholder: t('devise.email'), class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-4">
              <%= f.label :password %>:
            </div>
            <div class="col-sm-6">
              <%= f.password_field :password, autocomplete: "off", placeholder: t('devise.password'), class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-6 col-sm-offset-4">
              <div class="pull-right">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-6 col-sm-offset-4">
              <div class="pull-right">
                <%= button_tag type: 'submit', class: 'btn btn-success' do %>
                  <i class="fa fa-btn fa-sign-in"></i> <%= t 'devise.sign_in' %>
                <% end %>
              </div>
            </div>
          </div>

        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
