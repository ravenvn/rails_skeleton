<div class="row">
  <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
    <div class="panel panel-default panel-auth">
      <div class="panel-heading">
        <h1><%= t 'devise.change_password' %></h1>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <div class="col-sm-4">
              <%= f.label :password %>:
            </div>
            <div class="col-sm-6">
              <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: t('devise.password'), class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-4">
              <%= f.label :password_confirmation %>:
            </div>
            <div class="col-sm-6">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: t('devise.password_confirmation'), class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-6 col-sm-offset-4">
              <%= button_tag type: 'submit', class: 'btn btn-primary pull-right' do %>
                <i class="fa fa-btn fa-refresh"></i> <%= t 'devise.change_password' %>
              <% end %>
            </div>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
  </div>
</div>
