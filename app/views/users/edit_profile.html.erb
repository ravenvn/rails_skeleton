<%= content_for(:title, t('users.edit')) %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default panel-auth">
      <div class="panel-heading">
        <h1><%= t 'users.edit' %></h1>
      </div>
      <div class="panel-body">

        <% if @user.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                <li>
                  <%= msg %>
                </li>
                <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_for(@user, url: users_update_profile_path, html: { method: :put, class: 'form-horizontal' }) do |f| %>

          <div class="form-group">
            <div class="col-sm-4">
              <%= f.label :name %>:
            </div>
            <div class="col-sm-6">
              <%= f.text_field :name, autofocus: true, placeholder: t('.name'), class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-4">
              <%= f.label :avatar %>:
            </div>
            <div class="col-sm-6">
              <%= f.file_field :avatar %>
            </div>
          </div>

          <% if @user.avatar? %>
            <div class="form-group">
              <div class="col-sm-6 col-sm-offset-4">
                <%= image_tag @user.avatar %>
              </div>
            </div>
          <% end %>

          <div class="form-group">
            <div class="col-sm-6 col-sm-offset-4">
              <%= button_tag type: 'submit', class: 'btn btn-success pull-right' do %>
                <i class="fa fa-floppy-o"></i> <%= t '.save' %>
              <% end %>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
